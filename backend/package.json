{
  "name": "pokedex-backend",
  "version": "1.0.0",
  "description": "A simple server to add some new functions to PokeAPI",
  "main": "dist/Shared/Infra/Http/index.js",
  "repository": "git@github.com:ondanieldev/pokedex.git",
  "author": "Daniel Oliveira <me@ondaniel.com.br>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prod": "pm2 reload ecosystem.config.js",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --inspect --ignore node_modules src/Shared/Infra/Http/index.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "lint": "yarn eslint \"./**/*.ts\" --fix"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/node": "^7.18.10",
    "@babel/plugin-proposal-decorators": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.7.4"
  }
}
